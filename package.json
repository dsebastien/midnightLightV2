		"gulp-sourcemaps": "^1.5.1",	// js source map support for gulp: https://www.npmjs.com/package/gulp-sourcemaps
		"gulp-uglify": "^1.1.0",	// minify files using Uglify JS: https://www.npmjs.com/package/gulp-uglify
