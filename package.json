{
	"name": "Midnight Light",
	"version": "1.0.0",
	"devDependencies": {
		"apache-server-configs": "^2.14.0",		// base Apache HTTP Server config: https://www.npmjs.com/package/apache-server-configs
		"browser-sync": "^2.5.3", // live CSS reload & browser syncing: https://www.npmjs.com/package/browser-sync
		"del": "^1.1.1",	// delete files/folders: https://www.npmjs.com/package/del
		"gulp": "^3.8.11",	// build system (https://www.npmjs.com/package/gulp)
